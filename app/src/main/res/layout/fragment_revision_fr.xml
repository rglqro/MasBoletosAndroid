<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RevisionFR"
    android:fillViewport="true"
    android:background="@color/blanco">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableLayout
            android:id="@+id/tablDatps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingHorizontal="5dp"
            android:layout_alignParentLeft="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bordefondoblanco"
                android:paddingVertical="15dp">

                <TextView
                    android:id="@+id/textView33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Evento:"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvnevento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="Rock Show"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/bordefondoblanco"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha:"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvfechaeve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="15-AGO-2018"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@drawable/bordefondoblanco"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hora:"
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvhoraeve"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:text="08:00 pm"
                    android:textColor="#000"
                    android:textSize="17sp" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/llmostrarocultar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tablDatps"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:animateLayoutChanges="true"
            android:padding="5dp"
            android:background="@color/gris2"
            android:layout_marginTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txvSeccionFRev2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SecciÃ³n: "
                    android:textColor="#000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/txvSeccionFRev"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="ZONA GENERAL"
                    android:textColor="#000"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lldetalles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/tblasientos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/txvfilaFE2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fila "
                            android:textColor="#000"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txvfilaFRev"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="GENERAL"
                            android:textColor="#000"
                            android:textSize="17sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Asiento(s) "
                            android:textColor="#000"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txvAsientosFRev"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txvfilaFE2"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="1"
                            android:textColor="#000"
                            android:textSize="17sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView36"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forma Entrega "
                            android:textColor="@color/negro"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txventregRev2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="TextView"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="17sp"
                            tools:text="WillCall" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView37"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cargos "
                            android:textColor="@color/negro"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txvcfentrFRev2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="MX $0.00"
                            android:textAllCaps="true"
                            android:textColor="#000"
                            android:textSize="17sp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Forma de Pago "
                            android:textColor="@color/negro"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txvfpagoRev2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="TextView"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            android:textSize="17sp"
                            tools:text="PayPal" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cargos "
                            android:textColor="#000"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/txvcservFRev"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text="MX $52.50"
                            android:textColor="#000"
                            android:textSize="17sp"
                            tools:text="MX $52.50" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gris"/>


            <ToggleButton
                android:id="@+id/tbmasmenos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:checked="false"
                android:drawableRight="@drawable/flecha_abajo"
                android:fontFamily="sans-serif"
                android:paddingHorizontal="7dp"
                android:text="ToggleButton"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textOff="Ver Detalle   "
                android:textOn="Ocultar Detalle   " />

        </LinearLayout>

        <Button
            android:id="@+id/btContinuar6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/cbdeacuerdo"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="7dp"
            android:layout_marginVertical="7dp"
            android:background="@color/verdemb"
            android:text="Continuar"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_alignParentRight="true" />

        <CheckBox
            android:id="@+id/cbdeacuerdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txvtotalFRev2"
            android:background="@color/blanco"
            android:buttonTint="@color/azulmboscuro"
            android:text="Estoy de acuerdo"
            android:paddingHorizontal="5dp"
            android:textColor="@color/negro"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/txvtotalFRev2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/llmostrarocultar"
            android:padding="10dp"
            android:text="MX $600.00"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/cbdeacuerdo"
            android:layout_alignParentStart="true"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="Total"
            android:textColor="#ff0000"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>