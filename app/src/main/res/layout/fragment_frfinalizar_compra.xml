<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".carruselcompra.FRFinalizarCompra"
    android:background="@color/blanco"
    android:fillViewport="true">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rlinfofinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvtitulofc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gris2"
                android:padding="10dp"
                android:text="Nombre, SU COMPRA SE HA REALIZADO CORRECTAMENTE"
                android:textAlignment="center"
                android:textColor="@color/negro" />

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/negro" />

            <TextView
                android:id="@+id/txvnuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gris2"
                android:padding="10dp"
                android:text="ACUDA A CUALQUIERA DE NUESTROS PUNTOS DE VENTA "
                android:textAlignment="center"
                android:textColor="@color/negro" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="DETALLES DE LA COMPRA"
                android:textAlignment="center"
                android:textColor="@color/negro" />

            <TableLayout
                android:id="@+id/tbldatos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:paddingHorizontal="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No. Transacción"
                        android:textColor="@color/negro" />

                    <TextView
                        android:id="@+id/txvntran"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="TextView"
                        android:textColor="@color/negro" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Folios"
                        android:textColor="@color/negro" />

                    <TextView
                        android:id="@+id/txvfolios"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="TextView"
                        android:textColor="@color/negro" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/txvmensajefnal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gris2"
                android:clickable="true"
                android:padding="10dp"
                android:text="Informacion de la compra que es hecha"
                android:textAlignment="center"
                android:textColor="@color/negro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/llqro"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muestra este código al momento de llegar al evento "
                    android:textColor="@color/negro" />

                <ImageView
                    android:id="@+id/imvqrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mbiconor" />

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:text="IMPORTANTE: Para poder ver de nuevo este código puedes ingresar a la sección 'Mis Eventos'\n O puedes tomar una captura de pantalla de esta sección"
                    android:textColor="@color/gris"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btseguir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:background="@color/azulmb"
                android:text="Seguir Comprando"
                android:textAllCaps="false"
                android:textSize="17sp" />

            <Button
                android:id="@+id/btmisboletosfincompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@color/azulmb"
                android:text="Mis Boletos"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="17sp" />

        </LinearLayout>

        <WebView
            android:id="@+id/wb1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>