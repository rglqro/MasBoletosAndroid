<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".principal.Perfil_Fr">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/azulmboscuro"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="Perfil"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/LLPrincipal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/LLDatosPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/azulmboscuro"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/RLDatosPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:paddingVertical="10dp"
                    android:animateLayoutChanges="true">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="123dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:adjustViewBounds="true"
                        android:cropToPadding="false"
                        android:src="@drawable/ic_perfil" />

                    <TextView
                        android:id="@+id/txvnuser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/imageView3"
                        android:paddingHorizontal="7dp"
                        android:text="Nombre del Usuario"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp"
                        android:layout_toRightOf="@+id/imageView3" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/BtMEventos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:background="@android:color/transparent"
                android:text="Mis Eventos"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@android:color/transparent"
                android:text="Boleto Electrónico"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical" />


            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grisclaro"/>

            <Button
                android:id="@+id/btavisopriv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:text="Aviso de privacidad"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btayuda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:onClick="avisopriv"
                android:text="¿Necesitas ayuda?"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/bttutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:text="Ver Tutorial"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btbuzon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:text="Buzón de sugerencias"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btacercade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:text="Acerca de"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="15sp" />

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/grisclaro"/>

            <Button
                android:id="@+id/btcerrarsesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="  Cerrar sesión"
                android:textColor="@color/negro"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_sesion" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>