<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco"
    android:padding="7dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/llconfform">

        <TextView
            android:id="@+id/txvconf_compra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:text="Confirma tu compra"
            android:textColor="@color/negro" />

        <View
            android:id="@+id/view14"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="7dp"
            android:background="@color/gris2" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azulmboscuro"
            android:theme="@style/txtinputlabel">

            <EditText
                android:id="@+id/edtnticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="NÃºmero de ticket"
                android:inputType="number"
                android:textColor="@color/negro"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azulmboscuro"
            android:theme="@style/txtinputlabel">

            <EditText
                android:id="@+id/edtfolioct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Folio de Control"
                android:inputType="number"
                android:textColor="@color/negro"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/azulmboscuro"
                android:gravity="center_vertical"
                android:theme="@style/txtinputlabel">

                <EditText
                    android:id="@+id/edtfecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Fecha Pago"
                    android:inputType="date"
                    android:textColor="@color/negro"
                    android:textSize="14sp"
                    android:enabled="false"/>

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/imbfecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:cropToPadding="true"
                app:srcCompat="@drawable/cal_logo" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/azulmboscuro"
                android:gravity="center_vertical"
                android:theme="@style/txtinputlabel">

                <EditText
                    android:id="@+id/edthora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="@color/negro"
                    android:textSize="14sp"
                    android:enabled="false"
                    android:hint="Hora Pago"
                    android:inputType="time" />

            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/imbhora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/rel_logo" />

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azulmboscuro"
            android:theme="@style/txtinputlabel">

            <EditText
                android:id="@+id/edtsucursal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Sucursal"
                android:inputType="textPersonName"
                android:textColor="@color/negro"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azulmboscuro"
            android:theme="@style/txtinputlabel">

            <EditText
                android:id="@+id/edtmontopago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Monto de Pago"
                android:inputType="numberDecimal"
                android:textColor="@color/negro"
                android:textSize="14sp" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btcerrardialconf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/verdemb"
                android:text="Cerrar"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btconf_evto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/azulmb"
                android:text="Confirmar" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>