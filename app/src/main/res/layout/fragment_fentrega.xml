<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FEntregaFr"
    android:fillViewport="true"
    android:background="@color/blanco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/butaca" />

            <TableLayout
                android:id="@+id/tablDatps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView4"
                android:layout_toStartOf="@+id/imageView4"
                android:paddingLeft="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/gris2">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sección: "
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txvSeccionFE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ZONA GENERAL"
                        android:textColor="#000"
                        android:textSize="17sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/gris2">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fila: "
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txvfilaFE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GENERAL"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@color/gris2">

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Asiento(s): "
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txvAsientosFE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView20"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/TBLCostos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView4"
                android:paddingHorizontal="5dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gris2"
                        android:text="Precio de Boleto"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txvprecioFE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="MX $150.00 x 4"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gris2"
                        android:text="Cargos por servicio"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txvcservFE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="MX $52.50"
                        android:textColor="#000"
                        android:textSize="17sp"
                        tools:text="MX $52.50" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gris2"
                        android:text="Cargos por Forma Entrega:"
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txvcfentrFE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="MX $0.00"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gris2"
                        android:text="TOTAL: "
                        android:textColor="#000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txvtotalFE"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="MX $600.00"
                        android:textColor="#000"
                        android:textSize="17sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:id="@+id/llwillcall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/TBLCostos"
                android:layout_marginVertical="5dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbwillcall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/azulmboscuro"
                    android:checked="false"
                    android:duplicateParentState="false"
                    android:text="WILL CALL"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txvwillcall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingHorizontal="5dp"
                    android:text="El cliente debe acudir a cualquier punto de venta para recoger su boleto. La taquilla del recinto esta generalmente abierta el día de la función. Será provechoso si usted puede llegar temprano para tener en cuenta el estacionamiento y para evitar el ingreso al recinto una vez iniciado el espectáculo."
                    android:textColor="@color/negro" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llseguro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/llwillcall"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/cbseguro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/azulmboscuro"
                    android:text="SEGURO DEL BOLETO"
                    android:textColor="@color/negro"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txvseguro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp"
                    android:text="Protege tus boletos con tranquilidad al realizar la compra de sus boletos para cualquier evento, asegurándolo contra circunstancias inesperadas."
                    android:textColor="#000" />
            </LinearLayout>

            <Button
                android:id="@+id/btContinuar5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/llseguro"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="7dp"
                android:layout_marginVertical="7dp"
                android:background="@color/verdemb"
                android:text="Continuar"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>