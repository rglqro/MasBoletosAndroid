<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlfpagospinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_lv"
    android:orientation="horizontal"
    android:paddingHorizontal="5dp">

    <ImageView
        android:id="@+id/iconsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/puntoventa"
        android:maxWidth="100dp"/>

    <TextView
        android:id="@+id/txvsp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iconsp"
        android:paddingHorizontal="5dp"
        android:text="Forma de Pago"
        android:textColor="@drawable/select_lv_text"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/iconsp" />

    <TextView
        android:id="@+id/txvdescFP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iconsp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txvsp"
        android:layout_toRightOf="@id/iconsp"
        android:paddingHorizontal="7dp"
        android:text="TextView"
        android:textColor="@color/gris" />

</RelativeLayout>
